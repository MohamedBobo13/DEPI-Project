@model quizresultreadvm
!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Confirm Hard Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Confirm HardDelete</h2>

        <div class="alert alert-warning">
            Are you sure you want to Hard delete this Quiz Result ?
        </div>

        <div class="mb-3">
            <strong>Student ID:</strong> @Model.studentId
        </div>
        <div class="mb-3">
            <strong>Quiz ID:</strong> @Model.QuizId
        </div>

        <form asp-action="HardDelete" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="studentId" value="@Model.studentId" />
            <input type="hidden" name="quizId" value="@Model.QuizId" />

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="GetAllDeleted" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
