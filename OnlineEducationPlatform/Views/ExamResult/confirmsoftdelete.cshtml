@model Examresultreadvm
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Confirm Soft Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Confirm Delete</h2>

        <div class="alert alert-warning">
            Are you sure you want to soft delete this Exam Result ?
        </div>

        <div class="mb-3">
            <strong>Student ID:</strong> @Model.studentId
        </div>
        <div class="mb-3">
            <strong>Exam ID:</strong> @Model.Examid
        </div>

        <form asp-action="SoftDelete" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="studentId" value="@Model.studentId" />
            <input type="hidden" name="examId" value="@Model.Examid" />

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>