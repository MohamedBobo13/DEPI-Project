@model IEnumerable<PdfFileReadVm>
<div class="container table-container">
    <h2 class="text-center mb-4">Pdf List</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Url</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pdf in Model)
            {
                <tr>
                    <td>@pdf.Url</td>
                    <td>@pdf.Title</td>

                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@pdf.Id">Details</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@pdf.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@pdf.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a class="btn btn-primary btn-create" asp-action="Create">Create New Pdf File</a>
    </div>
</div>

