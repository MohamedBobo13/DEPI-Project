@model InstructorReadVm






<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Instructor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .delete-container {
            margin-top: 50px;
            padding: 30px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .delete-container h2 {
                font-size: 2rem;
                color: #dc3545;
            }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            padding: 10px 15px;
            font-size: 1.1rem;
            border-radius: 5px;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 10px 15px;
            font-size: 1.1rem;
            border-radius: 5px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .mt-4 {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="delete-container">
            <h2>Confirm Delete</h2>

            <p>Are you sure you want to delete the Instructor <strong>@Model.Username</strong>?</p>

            <!-- Display error messages -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="InstructorId" value="@Model.Id" />


                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>