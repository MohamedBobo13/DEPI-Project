@model AnswerAddVm

    <div class="container">
        <h2 class="text-center mb-4">Create Answer</h2>

        <form asp-action="SaveCreate">
            <div class="form-group mb-3">
                <label asp-for="AnswerText" class="form-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IsCorrect" class="form-label"></label>
                <select asp-for="IsCorrect" class="form-select">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="IsCorrect" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuestionId" class="form-label"></label>
                <input asp-for="QuestionId" class="form-control" />
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
