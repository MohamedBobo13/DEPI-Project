@model AnswerDetailsVm

    <div class="container">
        <h2 class="text-center mb-4">Answer Details</h2>

        <div>
            <h4 class="mb-3">Answer</h4>
            <dl class="row">
                <dt class="col-sm-3">Answer Text</dt>
                <dd class="col-sm-9">@Model.AnswerText</dd>

                <dt class="col-sm-3">Is Correct</dt>
                <dd class="col-sm-9">@Model.IsCorrect</dd>

                <dt class="col-sm-3">Question Text</dt>
                <dd class="col-sm-9">@Model.QuestionText</dd>
            </dl>
        </div>

        <div class="mt-4">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
