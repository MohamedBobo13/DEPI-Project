@using OnlineEducationPlatform.BLL.ViewModels.QuizVm
@Model List<QuizReadVm>

<div class="container table-container">
    <h2 class="text-center mb-4">Quiz List</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CourseId</th>
                <th>TotalQuestions</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var quiz in Model)
            {
                <tr>
                    <td>@quiz.Id</td>
                    <td>@quiz.Title</td>
                    <td>@quiz.CourseId</td>
                    <td>@quiz.TotalQuestions</td>

                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a class="btn btn-primary btn-create" asp-action="Create">Create New Quiz</a>
    </div>
</div>
