@model QuizReadVm

<h2>Delete Quiz</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Quiz Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Total Questions</dt>
        <dd class="col-sm-10">@Model.TotalQuestions</dd>

        <dt class="col-sm-2">Total Marks</dt>
        <dd class="col-sm-10">@Model.TotalMarks</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
