@model QuizUpdateVm

<h2>Edit Answer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter the answer text" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IsCorrect" class="control-label"></label>
        <select asp-for="IsCorrect" class="form-select">
            <option value="true">Correct</option>
            <option value="false">Incorrect</option>
        </select>
        <span asp-validation-for="IsCorrect" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LectureId" class="control-label"></label>
        <input asp-for="LectureId" class="form-control" placeholder="Enter the question ID" />
        <span asp-validation-for="LectureId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}