@model OnlineEducationPlatform.BLL.ViewModels.QuizViewModel.QuizUpdateVm

@{
    ViewData["Title"] = "Edit Quiz";
}

<h1>Edit Quiz</h1>

<form asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalQuestions"></label>
        <textarea asp-for="TotalQuestions" class="form-control"></textarea>
        <span asp-validation-for="TotalQuestions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalMarks"></label>
        <textarea asp-for="TotalMarks" class="form-control"></textarea>
        <span asp-validation-for="TotalMarks" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
